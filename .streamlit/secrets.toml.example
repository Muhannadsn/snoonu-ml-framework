# Snoonu ML Dashboard - Authentication Secrets Template
# =====================================================
# Copy this file to secrets.toml and fill in your values
# WARNING: Do NOT commit secrets.toml to git!
# For Streamlit Cloud: Add these in the dashboard settings under "Secrets"

[credentials]
cookie_name = "snoonu_ml_auth"
cookie_key = "YOUR_SECURE_RANDOM_KEY_HERE"  # Generate a secure random key!
cookie_expiry_days = 7

# Add users below - passwords must be bcrypt hashed
# To generate a hashed password, run:
# python -c "import bcrypt; print(bcrypt.hashpw('your_password'.encode(), bcrypt.gensalt()).decode())"

[credentials.usernames.admin]
name = "Admin User"
email = "admin@yourcompany.com"
password = "$2b$12$HASHED_PASSWORD_HERE"

[credentials.usernames.analyst]
name = "Data Analyst"
email = "analyst@yourcompany.com"
password = "$2b$12$HASHED_PASSWORD_HERE"

# Pre-authorized emails that can register (optional)
[preauthorized]
emails = ["team@yourcompany.com"]
